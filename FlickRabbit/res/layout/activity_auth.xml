<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:paddingTop="16dp" 
    android:paddingLeft="16dp"
    android:paddingRight="16dp" > 	   

    <TextView
        android:id="@+id/mini_token_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:autoLink="web"
        android:text="@string/mini_token_text" />

    <EditText android:id="@+id/mini_token_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/mini_token_text"
        android:hint="@string/mini_token_hint_1" />
    
    <EditText android:id="@+id/mini_token_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@+id/mini_token_1"
        android:layout_toEndOf="@+id/mini_token_1"
        android:layout_below="@+id/mini_token_text"
        android:hint="@string/mini_token_hint_2" />
    
    <EditText android:id="@+id/mini_token_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@+id/mini_token_2"
        android:layout_toEndOf="@+id/mini_token_2"
        android:layout_below="@+id/mini_token_text"
        android:hint="@string/mini_token_hint_3" />
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mini_token_3"
        android:layout_toEndOf="@+id/mini_token_3"
        android:layout_below="@+id/mini_token_text"
        android:text="@string/button_send" />
    
</RelativeLayout>